<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Permisos -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- Declarar la feature de cámara como no requerida para evitar el warning -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:name=".LostAndFoundApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LostAndFound">

        <!-- Launcher -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Internas (no expuestas) -->
        <activity
            android:name=".ui.register.RegisterActivity"
            android:exported="false"/>

        <activity
            android:name=".ui.forgotpassword.ForgotPasswordActivity"
            android:exported="false"/>

        <activity
            android:name=".ui.camera.CameraActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.report.ReportLostItemActivity"
            android:exported="false" />

        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="false" />

        <activity
            android:name=".ui.home.HomeActivity"
            android:exported="false"
            android:label="UniFind" />

        <activity
            android:name=".ui.detail.ItemDetailActivity"
            android:exported="false"
            android:label="UniFind" />

        <activity
            android:name=".ui.claimobject.ClaimObjectActivity"
            android:exported="false" />

        <activity
            android:name=".ui.notifications.NotificationsActivity"
            android:exported="false" />

        <activity
            android:name=".ui.history.HistoryActivity"
            android:exported="false" />

        <activity
            android:name=".ui.settings.SettingsActivity"
            android:exported="false" />

        <!-- Deep link para reset de contraseña (custom scheme, NO app links) -->
        <activity
            android:name=".ui.resetpassword.ResetPasswordActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <!-- com.example.lostandfound://login-callback -->
                <data
                    android:scheme="com.example.lostandfound"
                    android:host="login-callback" />
            </intent-filter>
        </activity>

    </application>

</manifest>
